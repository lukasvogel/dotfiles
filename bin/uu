#!/bin/bash
UNAMESTR=`uname`
if [[ "$UNAMESTR" == 'Linux' ]]; then
    sudo apt-get update && \
        sudo apt-get upgrade && \
        sudo apt-get dist-upgrade && \
        sudo apt-get autoremove && \
        sudo apt-get clean
elif [[ "$UNAMESTR" == 'Darwin' ]]; then
    brew update -v && \
        brew upgrade -v && \
        brew cleanup -v
else
    echo "Platform not supported"
    exit 1
fi
